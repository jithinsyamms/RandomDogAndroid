<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jithinsyamms.randomdog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name=".GlobalApplication"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandomDog">
        <activity
            android:name=".view.activities.RecentDogsActivity"
            android:exported="false"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />
        <activity
            android:name=".view.activities.GenerateDogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false" />
        <activity
            android:name=".view.activities.RandomDogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>